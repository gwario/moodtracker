<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:weightSum="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/glyphicons_13_heart"
            android:id="@+id/ibCurrentMoodWidget0"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="false"
            android:layout_margin="2dp"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/glyphicons_20_heart_empty"
            android:id="@+id/ibCurrentMoodWidget1"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/glyphicons_20_heart_empty"
            android:id="@+id/ibCurrentMoodWidget2"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/glyphicons_20_heart_empty"
            android:id="@+id/ibCurrentMoodWidget3"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/glyphicons_20_heart_empty"
            android:id="@+id/ibCurrentMoodWidget4"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/glyphicons_20_heart_empty"
            android:id="@+id/ibCurrentMoodWidget5"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/glyphicons_20_heart_empty"
            android:id="@+id/ibCurrentMoodWidget6"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/glyphicons_417_disk_saved"
            android:id="@+id/ibUpdateCurrentMoodWidget"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/glyphicons_309_share_alt"
            android:id="@+id/ibShareCurrentMoodWidget"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            />

    </LinearLayout>

</FrameLayout>